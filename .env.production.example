# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# =============================================================================
# SUPABASE CONNECTION (Required)
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# DATABASE (Required for Prisma)
# =============================================================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For Supabase: Get from Database Settings -> Connection String -> URI
DATABASE_URL=postgresql://postgres.your-project-ref:password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# =============================================================================
# S3 STORAGE (Optional - only if using Supabase Storage S3 protocol)
# =============================================================================
# Get these from Supabase Storage Settings
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=
NEXT_PUBLIC_STORAGE_S3_URL=

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
